<?xml version="1.0" encoding="UTF-8"?>

<!--
	The locale attribute defines the default application Locale.
	If this value is defined it will override Locale returned by the request.
	<click-app charset="UTF-8" locale="ru">
-->
<click-app charset="UTF-8" locale="ru">
	<headers>
		<header name="Content-Type" value="text/html;charset=UTF-8"/>
	</headers>

	<pages package="by.zloy.web"/>

	<mode value="development"/>

	<log-service classname="org.apache.click.extras.service.JdkLogService"/>

	<file-upload-service classname="org.apache.click.extras.gae.MemoryFileUploadService">
		<property name="sizeMax" value="2000"/>
		<property name="fileSizeMax" value="1000"/>
	</file-upload-service>
</click-app>